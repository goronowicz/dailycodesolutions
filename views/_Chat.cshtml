<div class="row chat" style="width: 91% !important">
    <div id="discussion" class="discussionDiv list-group"></div>
    <div>
        <form data-bind="submit: enterSend">
            <div class="input-group">
                <input type="text" style="max-width: none;" data-bind="value: message" class="form-control">
                <span class="input-group-btn">
                    <input type="submit" class="btn btn-default" data-bind="click: send " value="Send">
                </span>
            </div>
        </form>
    </div>
</div>


