@section Scripts{
    <script type="text/javascript" src="~/Scripts/app/timer.js"></script>
}
@section Style
{
    <style type="text/css">
        .timeLabel {
            text-align: center;
            vertical-align: middle;
        }
    </style>
}
<form>
    <h2>Zamówienia</h2>
    <hr />
    <div id="process" style="margin-left: auto;margin-right: auto;">
        <div class="progress progress-striped active" style="width: 100%; height: 30px;">
            <div class="progress-bar" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%; line-height:30px;">
                Waiting for getting data ...
            </div>
        </div>
    </div>
    <div id="complete" style="display:none;">
        <div class="form-group row">
            <div class="col-xs-6">
                <!-- ko if: loggedIn -->
                <button class="btn btn-default" data-bind="click: $parent.navigateToCreate">
                    <span class="glyphicon glyphicon-plus"></span>Nowe Zamówienie</button>
                <!-- /ko -->
            </div>
            <div class="col-xs-6">
                <h3>Czas: <b><span data-bind="text: clock"></span></b></h3>
            </div>
        </div>
        <div class="cols-xs-12">
            <table class="table table-bordered table-striped table-hover sortable" style="width: 91% !important">
                <thead>
                    <tr>
                        <th class="col-xs-5" onclick="sort();" data-defaultsort="asc" data-sortcolumn="0" data-sortkey="0-1"> Restaurant</th>
                        <th class="col-xs-2" onclick="sort();" data-defaultsort="asc" data-sortcolumn="1" data-sortkey="0-1"> Deadline</th>
                        <th class="col-xs-3" onclick="sort();" data-defaultsort="asc" data-sortcolumn="1" data-sortkey="0-1"> Status</th>
                        <th class="col-xs-2">Action</th>
                    </tr>
                </thead>
                <tbody data-bind="foreach: orderList">
                    <tr>
                        <td><div data-bind="text: supplier" /></td>
                        <td><div data-bind="deadLineBinding: deadLine" /></td>
                        <td><div data-bind="text: $parent.getState($data)" /></td>
                        <td class="text-center"><button data-bind="click: $parent.action" class="btn btn-info btn-sm ">Szczegóły</button></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</form>
<!-- /ko -->
